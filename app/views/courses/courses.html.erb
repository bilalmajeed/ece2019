<div class="wrapper">
    <div class="container">
    	<h1>CORE COURSES</h1>
    	<table class="courses-table">
    		<% @terms.each do |term_count| %>
    		<tr>
    			<td class="term_cell"><%= term_count %></td>
		        <% @courses.each do |course| %>
		        	<% if course["term"] == term_count %>
			          	<td class="course_cell" data-toggle="modal" data-target="#course-detail-modal">
			              <div data-toggle="tooltip" data-placement="bottom" title="<%=course["title"]%>">
			              	<%= course["course_code"] %>
			              </div>
			            </td>
			        <% end %>
		      	<% end %>
		    </tr>
	      	<% end %>
      	</table>
    </div>
</div>

<div class="modal fade" id="course-detail-modal" role="dialog" aria-labelledby="CourseDetail"></div>