<div class="modal-dialog" role="document">
    <div class="modal-content">
    	<% course = @selected_course.first %>
	    <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title" id="myModalLabel"><%= course.subject %> <%= course.number %></h4>
	        <div class="course-detail-term">Term: <%= course.term %> | Credit: <%= course.units %></div>
	    </div>
      	<div class="modal-body">
      		<div class="course-detail-title"><%= course.title %></div>
      		<br>
	    	<div class="course-detail-description"><%= course.description %></div>
	    </div>
	    <div class="modal-footer">
	    	<%= link_to course.subject + " " + course.number + " @ UW Flow", 'https://uwflow.com/course/'+ course.subject.downcase +  course.number, :target => '_blank' %>
      	</div>
    </div>
</div>